client.unfocused        $in-bg-color	  	$in-border-color 	$in-text-color 		$in-border-color
client.focused_inactive $in-bg-color  		$in-border-color 	$in-text-color 		$in-border-color
client.urgent           $urg-bgr-color    	$urg-border-color   	$text-color          	$urg-border-color

